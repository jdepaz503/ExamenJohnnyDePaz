@model ExamenJohnnyDePaz.Models.Empleado

@{
    ViewData["Title"] = "Eliminar";
}

<h1>Eliminar Empleado</h1>

<h3>¿Seguro/a que desea elimanar a este empleado?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nombre
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreCompleto)
        </dd>
        <dt class = "col-sm-2">
            DUI
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cedula)
        </dd>
        <dt class = "col-sm-2">
            Correo Electrónico
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Correo)
        </dd>
        <dt class = "col-sm-2">
            Fecha de Nacimiento
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaNacimiento)
        </dd>
        <dt class = "col-sm-2">
            Fecha de Ingreso
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaIngreso)
        </dd>
        
        <dt class = "col-sm-2">
            Área
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdAreaNavigation.Nombre)
        </dd class>
        <dt class = "col-sm-2">
            Jefe
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdJefeNavigation.NombreCompleto)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdEmpleado" />
        <input type="submit" value="Eliminar Empleado" class="btn btn-danger" /> |
        <a asp-action="Index">Volver al Listado</a>
    </form>
</div>
